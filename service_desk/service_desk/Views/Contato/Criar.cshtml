@model ContatoModel;

@{
    ViewData["Title"] = "Criar Contato";
}

<div class="text-center">
    <h1>Criar Contato</h1>
</div>
    
<form asp-controller="Contato" asp-action="Criar" method="post">
    <div class="mb-3">
        <label for="Descricao" class="form-label">Descricao</label>
        <input type="text" asp-for="Descricao" class="form-control" placeholder="Digite a Descricao do contato">
        @Html.ValidationMessageFor(x => x.Descricao)
    </div>

    <div class="mb-3">
        <label for="IdTipoContato" class="form-label">Id TipoContato</label>
        <input type="text" asp-for="IdTipoContato" class="form-control" placeholder="Digite o IdTipoContato do contato">
    </div>

    <div class="mb-3">
        <label for="IdUsuario" class="form-label">Id Usuario</label>
        <input type="text" asp-for="IdUsuario" class="form-control" placeholder="Digite o IdUsuario do contato">
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>