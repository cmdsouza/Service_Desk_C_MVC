@model ContatoModel;

@{
	ViewData["Title"] = "[ADM] Gestão de Contatos";
	Layout = "_LayoutAdministrador";
}

<div class="layout-page">
	<div class="container-xxl container-p-y">

		<div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
			<div class="row">
				<a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)" id='menu-toggle'>
					<i class="bx bx-menu bx-sm"></i>
				</a>
			</div>
		</div>
		<form asp-controller="Contato" asp-action="Criar" method="post">
			<div class="row">
				<div class="col-sm-12">
					<div class="card mb-4">
						<p class="card-header">Criar alerta!</p>
						<div class="card-body">
							<div class="row">
								<div class="row">
									<div class="col-sm">
										<div>
											<label for="Descricao" class="form-label">Título</label>
											<input type="text"
												   class="form-control"
												   id="defaultFormControlInput"
												   placeholder="Título da categoria"
												   aria-describedby="defaultFormControlHelp"
												   asp-for="Descricao" />
										</div>
										@Html.ValidationMessageFor(x => x.Descricao)
									</div>
								</div>
								<div class="row" style="margin-top:2%;">
									<div class="col-sm">
										<div>
											<label for="IdTipoContato" class="form-label">Tipo de Contato</label>
											@Html.DropDownListFor(m => m.IdTipoContato, (List<SelectListItem>)ViewBag.TipoContato, "", new {@class = "form-control"})
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-sm" id="espaco-botoes">
							<button type="submit" class="btn btn-primary">Criar</button>
							<a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>