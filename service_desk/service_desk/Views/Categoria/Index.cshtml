@model List<CategoriaModel>;

@{
    ViewData["Title"] = "Lista de Categorias";
}

<div class="text-center">
    <h1>Lista de Categorias</h1>
</div>

    @if(TempData["MensagemSucesso"] != null){
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-success btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if(TempData["MensagemErro"] != null){
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />
    <div class="text-right">
        <a class="btn btn-success" role='button' asp-controller="Categoria" asp-action="Criar">Adicionar</a>
    </div>
    <br />

    <table class="table" id="myTable">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nome</th>
          <th scope="col">Data de Criação</th>
          <th scope="col">Data de Atualização</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        @if(Model != null && Model.Any())
        {
            foreach(CategoriaModel categoria in Model)
            {
                <tr>
                  <th scope="row">@categoria.Id</th>
                  <td>@categoria.Nome</td>
                  <td>@categoria.DataCriacao</td>
                  <td>@categoria.DataAtualizacao</td>
                  <td>
                       <div class="btn-group" role="group">
                         <a role="button" class="btn btn-primary" asp-route-id="@categoria.Id" asp-controller="Categoria" asp-action="Editar">Editar</a>
                         <a role="button" class="btn btn-danger" asp-route-id="@categoria.Id" asp-controller="Categoria" asp-action="ApagarConfirmacao">Excluir</a>
                       </div>
                  </td>
                </tr>
            }
        }
        
        
      </tbody>
    </table>
