@model AnexoModel;

@{
    ViewData["Title"] = "Editar Anexo";
}

<div class="text-center">
    <h1>Editar Anexo</h1>
</div>
    
<form asp-controller="Anexo" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label for="Arquivo" class="form-label">Arquivo</label>
        <input type="text" asp-for="Arquivo" class="form-control" placeholder="Digite o arquivo do anexo">
        @Html.ValidationMessageFor(x => x.Arquivo)
    </div>

    <div class="mb-3">
        <label for="IdAcompanhamento" class="form-label">Id Acompanhamento</label>
        <input type="text" asp-for="IdAcompanhamento" class="form-control" placeholder="Digite o Id acompanhamento do anexo">
    </div>

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Anexo" asp-action="Index" role="button">Voltar</a>
</form>