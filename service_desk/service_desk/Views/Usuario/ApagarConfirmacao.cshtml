@model UsuarioModel;

@{
    ViewData["Title"] = "Confirmação para excluir o usuario";
}

<div class="text-center">
    <h1>Você tem certeza que deseja excluir o usuario abaixo?</h1>
    <p>@Model.Matricula</p>
</div>

<a class="btn btn-primary" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a>
<a class="btn btn-danger" role="button" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar</a>