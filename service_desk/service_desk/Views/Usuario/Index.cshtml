
@model List<UsuarioModel>;

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="text-center">
    <h1>Lista de Usuarios</h1>
</div>

    @if(TempData["MensagemSucesso"] != null){
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-success btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if(TempData["MensagemErro"] != null){
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />
    <div class="text-right">
        <a class="btn btn-success" role='button' asp-controller="Usuario" asp-action="Criar">Adicionar</a>
    </div>
    <br />

    <table class="table" id="myTable">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Matrícula</th>
          <th scope="col">Nome</th>
          <th scope="col">Senha</th>
          <th scope="col">Autorização</th>
          <th scope="col">Email</th>
          <th scope="col">Telefone</th>
          <th scope="col">Data de Criação</th>
          <th scope="col">Data de Atualização</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        @if(Model != null && Model.Any())
        {
            foreach(UsuarioModel usuario in Model)
            {
                <tr>
                  <th scope="row">@usuario.Id</th>
                  <td>@usuario.Matricula</td>
                  <td>@usuario.Nome</td>
                  <td>@usuario.Senha</td>
                  <td>@usuario.Autorizacao</td>
                  <td>@usuario.Email</td>
                  <td>@usuario.Telefone</td>
                  <td>@usuario.DataCriacao</td>
                  <td>@usuario.DataAtualizacao</td>
                  <td>
                       <div class="btn-group" role="group">
                         <a role="button" class="btn btn-primary" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="Editar">Editar</a>
                         <a role="button" class="btn btn-danger" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="ApagarConfirmacao">Excluir</a>
                       </div>
                  </td>
                </tr>
            }
        }
        
        
      </tbody>
    </table>
