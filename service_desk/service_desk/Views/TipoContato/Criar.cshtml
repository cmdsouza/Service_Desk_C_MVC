@model TipoContatoModel;

@{
	ViewData["Title"] = "[ADM] Gestão de tipos de contato";
	Layout = "_LayoutAdministrador";
}

<div class="layout-page">
	<div class="container-xxl container-p-y">

		<div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
			<div class="row">
				<a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)" id='menu-toggle'>
					<i class="bx bx-menu bx-sm"></i>
				</a>
			</div>
		</div>
		<form asp-controller="TipoContato" asp-action="Criar" method="post">
			<div class="row">
				<div class="col-sm-12">
					<div class="card mb-4">
						<p class="card-header">Criar tipo de contato!</p>
						<div class="card-body">
							<div class="row">
								<div class="col-sm">
									<div>
										<label for="Descricao" class="form-label">Ícone</label>
										<input type="text"
											   class="form-control"
											   id="defaultFormControlInput"
											   aria-describedby="defaultFormControlHelp"
											   asp-for="Icone">
										<div class="form-text">Referência de Class: <a href="https://boxicons.com/" target="_blank">BoxIcons</a></div>
									</div>
									@Html.ValidationMessageFor(x => x.Icone)
								</div>
								<div class="col-sm">
									<div>
										<label for="Descricao" class="form-label">Descrição</label>
										<input type="text"
											   class="form-control"
											   id="defaultFormControlInput"
											   aria-describedby="defaultFormControlHelp"
											   asp-for="Descricao">
									</div>
									@Html.ValidationMessageFor(x => x.Descricao)
								</div>
							</div>
						</div>
						<div class="col-sm" style="margin-left: 1%; margin-bottom: 3%;">
							<button type="submit" class="btn btn-primary">Criar</button>
							<a class="btn btn-secondary" asp-controller="TipoContato" asp-action="Index" role="button">Voltar</a>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>