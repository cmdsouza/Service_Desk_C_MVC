@model DocumentacaoModel;

@{
	ViewData["Title"] = "[ADM] Gestão de Documentações";
	Layout = "_LayoutAdministrador";
}

<form asp-controller="Documentacao" asp-action="Alterar" method="post">
	<input type="hidden" asp-for="Id" />
	<div class="row">
		<div class="col-sm-12">
			<div class="card mb-4">
				<p class="card-header" style="font-weight: bold; color: #1B5F9D; font-size: 16px; margin-bottom:-1%;">Editar documentações!</p>
				<div class="card-body">
					<div class="row">
						<div class="row">
							<div class="col-sm">
								<div>
									<label for="Descricao" class="form-label">Títulos e Links</label>
									<textarea
										   class="form-control"
										   id="defaultFormControlInput"
										   aria-describedby="defaultFormControlHelp"
										   asp-for="TituloLink">

									</textarea>
								</div>
								@Html.ValidationMessageFor(x => x.TituloLink)
							</div>
						</div>
						<input type="hidden" asp-for="IdUsuario" value="1" />
					</div>
				</div>
				<div class="col-sm" style="margin-bottom: 3%; margin-left: -1%;">
					<button type="submit" class="btn btn-primary" style="margin-left: 2%;">Alterar</button>
					<a class="btn btn-secondary" asp-controller="Documentacao" asp-action="Index" role="button">Voltar</a>
				</div>
			</div>
		</div>
	</div>
</form>