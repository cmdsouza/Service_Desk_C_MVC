@model DocumentacaoModel;

<!-- Título1;link1&Título2;link2&Título3;link3&Título4;link4&Título5;link5&Título6;link6&Título7;link7&Título8;link8&Título9;link9 -->
@{
	ViewData["Title"] = "[ADM] Gestão de Documentações";
	Layout = "_LayoutAdministrador";
}

<div class="layout-page">
	<div class="container-xxl container-p-y">

		<div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
			<div class="row">
				<a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)" id='menu-toggle'>
					<i class="bx bx-menu bx-sm"></i>
				</a>
			</div>
		</div>
		<form asp-controller="Documentacao" asp-action="Criar" method="post">
			<div class="row">
				<div class="col-sm-12">
					<div class="card mb-4">
						<p class="card-header">Criar documentação!</p>
						<div class="card-body">
							<div class="row">
								<div class="row">
									<div>
										<label for="Descricao" class="form-label">Títulos e Links</label>
										<textarea class="form-control"
												  id="defaultFormControlInput"
												  aria-describedby="defaultFormControlHelp"
												  asp-for="TituloLink">

									</textarea>
									</div>
									@Html.ValidationMessageFor(x => x.TituloLink)
								</div>
								<input type="hidden" value="1" asp-for="IdUsuario" />
							</div>
						</div>
						<div class="col-sm" style="margin-left: 1%; margin-bottom: 3%;">
							<button type="submit" class="btn btn-primary">Criar</button>
							<a class="btn btn-secondary" asp-controller="Documentacao" asp-action="Index" role="button">Voltar</a>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>