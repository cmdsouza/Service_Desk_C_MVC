@model AvaliacaoModel;

@{
    ViewData["Title"] = "Confirmação para excluir o avaliacao";
}

<div class="text-center">
    <h1>Você tem certeza que deseja excluir o avaliacao abaixo?</h1>
    <p>@Model.Valor</p>
</div>

<a class="btn btn-primary" role="button" asp-controller="Avaliacao" asp-action="Index">Cancelar</a>
<a class="btn btn-danger" role="button" asp-controller="Avaliacao" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar</a>